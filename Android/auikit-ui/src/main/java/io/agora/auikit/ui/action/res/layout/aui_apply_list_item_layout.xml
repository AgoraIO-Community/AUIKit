<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:theme="?attr/aui_action_appearance"
    android:background="?attr/aui_invitation_item_layout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.agora.auikit.ui.basic.AUIImageView
        android:id="@+id/ivApplyAvatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/voice_seat_roundStyle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtApplyUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="?attr/aui_invitation_item_title_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivApplyAvatar"
        app:layout_constraintStart_toEndOf="@+id/ivApplyAvatar"
        app:layout_constraintTop_toTopOf="@+id/ivApplyAvatar"
        tools:text="Susan Stark" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtApplyAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/voice_bg_member_item_action"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/voice_white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivApplyAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivApplyAvatar"
        tools:text="Apply" />
</androidx.constraintlayout.widget.ConstraintLayout>
