<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--================= 主题属性 =================-->
    <attr name="aui_primary_appearance" format="reference"/>

    <!--================= 样式属性 =================-->

    <!-- 房间信息样式 -->
    <declare-styleable name="AUIPrimaryView">
        <attr name="aui_primary_appearance"/>

        <!--左下角icon start -->
        <attr name="aui_primary_input_width" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_primary_input_height" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <!--左下角icon资源-->
        <attr name="aui_primary_input_resource" format="reference"/>
        <!--左下角icon背景-->
        <attr name="aui_primary_input_background" format="color|reference"/>
        <!--左下角icon内间距-->
        <attr name="aui_primary_contentPadding" format="dimension"/>
        <attr name="aui_primary_input_marginStart" format="dimension"/>

        <!--左下角icon end -->

        <!-- input layout start -->
        <attr name="aui_primary_input_mic_width" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_primary_input_mic_height" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_primary_input_mic_resource" format="reference"/>
        <attr name="aui_primary_micVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="aui_primary_mic_marginEnd" format="dimension"/>

        <attr name="aui_primary_edit_layout_background" format="color|reference"/>
        <attr name="aui_primary_edit_layout_marginStart" format="dimension"/>
        <attr name="aui_primary_edit_layout_marginEnd" format="dimension"/>
        <attr name="aui_primary_edit_background" format="color|reference"/>
        <attr name="aui_primary_edit_maxLines" format="integer"/>
        <attr name="aui_primary_edit_singleLine" format="boolean"/>
        <attr name="aui_primary_edit_textSize" format="dimension"/>
        <attr name="aui_primary_edit_textColor" format="color|reference"/>

        <attr name="aui_primary_emoji_resource" format="reference"/>
        <attr name="aui_primary_emoji_width" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_primary_emoji_height" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>

        <attr name="aui_primary_send_background" format="color|reference"/>
        <attr name="aui_primary_send_textColor" format="color|reference"/>
        <attr name="aui_primary_send_textSize" format="dimension"/>
        <attr name="aui_primary_send_marginEnd" format="dimension"/>
        <attr name="aui_primary_send_width" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <attr name="aui_primary_send_height" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>

        <attr name="aui_primary_expression_background" format="color|reference"/>

    </declare-styleable>

</resources>