<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AUIMemberInfo">
        <item name="aui_memberInfo_appearance">@style/AUIMemberInfo.Appearance</item>
    </style>

    <!-- 房间人数和用户展示默认样式 -->
    <style name="AUIMemberInfo.Appearance" >
        <item name="aui_upperRight_root_layout_width">wrap_content</item>
        <item name="aui_upperRight_root_layout_height">wrap_content</item>
        <item name="aui_upperRight_layout_paddingHorizontal">8dp</item>
        <item name="aui_upperRight_layout_paddingVertical">0dp</item>

        <item name="aui_upperRight_memberRankVisibility">visible</item>
        <item name="aui_upperRight_member1_Visibility">visible</item>
        <item name="aui_upperRight_member2_Visibility">visible</item>
        <item name="aui_upperRight_member3_Visibility">visible</item>
        <item name="aui_upperRight_member_item_width">26dp</item>
        <item name="aui_upperRight_member_item_height">26dp</item>
        <item name="aui_upperRight_member_count_width">26dp</item>
        <item name="aui_upperRight_member_count_height">26dp</item>
        <item name="aui_upperRight_member_spacing">2dp</item>
        <item name="aui_upperRight_default_member_bg">@drawable/aui_member_item_light_bg</item>

        <item name="aui_upperRight_count_max_width">50dp</item>
        <item name="aui_upperRight_count_min_width">40dp</item>
        <item name="aui_upperRight_count_text">1.5K</item>
        <item name="aui_upperRight_count_size">11sp</item>
        <item name="aui_upperRight_count_color">#FFFFFF</item>
        <item name="aui_upperRight_count_style">bold</item>
        <item name="aui_upperRight_count_spacing">4dp</item>
        <item name="aui_upperRight_count_Visibility">visible</item>
        <item name="aui_upperRight_count_paddingHorizontal">4dp</item>
        <item name="aui_upperRight_count_paddingVertical">6dp</item>

        <item name="aui_upperRight_count_background">@drawable/aui_member_count_dark_bg</item>

        <!-- 更多用户 -->
        <item name="aui_roomMoreUser_drawable">@mipmap/aui_member_icon_arrow</item>
        <item name="aui_roomMoreUser_Visibility">visible</item>
        <item name="aui_roomMoreUser_width">32dp</item>
        <item name="aui_roomMoreUser_height">32dp</item>
        <item name="aui_roomMoreUser_marginStart">4dp</item>

        <!-- 关闭 -->
        <item name="aui_roomClose_drawable">@mipmap/aui_member_icon_shutdown</item>
        <item name="aui_roomClose_Visibility">visible</item>
        <item name="aui_roomClose_width">36dp</item>
        <item name="aui_roomClose_height">36dp</item>
        <item name="aui_roomClose_marginStart">4dp</item>

        <!-- 按钮 -->
        <item name="aui_roomButton_normalColor">#33FFFFFF</item>
    </style>

    <style name="AUIRoomMemberListView">
        <item name="aui_memberInfoList_title_textColor">#171A1C</item>
        <item name="aui_memberInfoList_userName_textColor">#171A1C</item>
        <item name="aui_memberInfoList_userNameInfo_textColor">#919BA1</item>
    </style>

    <style name="aui_member_seat_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>