<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AUIUpperLeftInformation">
        <item name="aui_upperLeft_appearance">@style/AUIUpperLeftInformation.Appearance</item>
    </style>

    <!-- 房间信息默认样式 -->
    <style name="AUIUpperLeftInformation.Appearance">
        <item name="aui_upperLeft_layout_width">wrap_content</item>
        <item name="aui_upperLeft_layout_height">wrap_content</item>
        <item name="aui_upperLeft_rootLayout_style">RECTANGLE</item>
        <item name="aui_upperLeft_layout_radius">19</item>
        <item name="aui_upperLeft_Layout_background">#33000000</item>
        <item name="aui_upperLeft_backVisibility">gone</item>
        <item name="aui_upperLeft_layout_paddingHorizontal">3dp</item>
        <item name="aui_upperLeft_layout_paddingVertical">2dp</item>

        <item name="aui_upperLeft_avatar_width">32dp</item>
        <item name="aui_upperLeft_avatar_height">32dp</item>

        <item name="aui_upperLeft_titleText">Title</item>
        <item name="aui_upperLeft_titleTextSize">16sp</item>
        <item name="aui_upperLeft_titleTextColor">#FFFFFF</item>
        <item name="aui_upperLeft_titleTextStyle">bold</item>
        <item name="aui_upperLeft_titleVisibility">visible</item>
        <item name="aui_upperLeft_title_max_width">120dp</item>
        <item name="aui_upperLeft_title_min_width">80dp</item>

        <item name="aui_upperLeft_subtitleText">SubTitle</item>
        <item name="aui_upperLeft_subtitleTextSize">11sp</item>
        <item name="aui_upperLeft_subtitleTextColor">#CCFFFFFF</item>
        <item name="aui_upperLeft_subtitleTextStyle">normal</item>
        <item name="aui_upperLeft_subtitleVisibility">visible</item>
        <item name="aui_upperLeft_subtitle_max_width">120dp</item>
        <item name="aui_upperLeft_subtitle_min_width">80dp</item>

        <item name="aui_upperLeft_title_spacing">8dp</item>
        <item name="aui_upperLeft_subtitle_spacing">8dp</item>
        <item name="aui_upperLeft_right_icon_spacing">0dp</item>
        <item name="aui_upperLeft_rightIcon_bg_marginRight">0dp</item>
        <item name="aui_upperLeft_rightIcon_Visibility">visible</item>
        <item name="aui_upperLeft_rightIcon_bg_Visibility">visible</item>

        <item name="aui_upperLeft_right_icon_idle">@drawable/aui_room_info_default_right_icon</item>
        <item name="aui_upperLeft_right_icon_background">@drawable/aui_room_info_icon_bg</item>

        <item name="aui_upperLeft_icon_width">20dp</item>
        <item name="aui_upperLeft_icon_height">20dp</item>

        <item name="aui_upperLeft_icon_bg_width">44dp</item>
        <item name="aui_upperLeft_icon_bg_height">32dp</item>

    </style>

    <style name="voice_seat_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>